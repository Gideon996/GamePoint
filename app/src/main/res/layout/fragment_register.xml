<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.authentication.RegisterFragment">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_layout">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailRegisterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="@color/silver"
            app:boxStrokeErrorColor="@color/red"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:errorIconTint="@color/red"
            app:errorTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:errorTextColor="@color/red">

            <EditText
                android:id="@+id/emailRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="@color/dark_cyan"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/silver"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordRegisterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="@color/silver"
            app:boxStrokeErrorColor="@color/red"
            app:errorEnabled="true"
            app:errorIconTint="@color/red"
            app:errorTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:errorTextColor="@color/red"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/passwordRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="@color/dark_cyan"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/silver"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameRegisterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="@color/silver"
            app:boxStrokeErrorColor="@color/red"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:errorIconTint="@color/red"
            app:errorTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:errorTextColor="@color/red">

            <EditText
                android:id="@+id/nameRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="@color/dark_cyan"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/silver"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/surnameRegisterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="@color/silver"
            app:boxStrokeErrorColor="@color/red"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:errorIconTint="@color/red"
            app:errorTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:errorTextColor="@color/red">

            <EditText
                android:id="@+id/surnameRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="@color/dark_cyan"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/surname"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/silver"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/signupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_cyan"
            android:text="@string/create_user"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/goToSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_value"
            android:gravity="center"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
</layout>