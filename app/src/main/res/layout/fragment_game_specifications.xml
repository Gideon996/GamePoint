<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.showgame.GameSpecificationsFragment">

    <LinearLayout
        android:id="@+id/steamSpecificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_value"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/fifteen_padding"
            app:columnCount="2"
            app:useDefaultMargins="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developers_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/steamDeveloper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_value"
                android:autoSizeMaxTextSize="@dimen/max_text_size"
                android:autoSizeMinTextSize="@dimen/min_text_size"
                android:autoSizeStepGranularity="@dimen/step_text_size"
                android:autoSizeTextType="uniform"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/silver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publishers_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/steamPublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_value"
                android:autoSizeMaxTextSize="@dimen/max_text_size"
                android:autoSizeMinTextSize="@dimen/min_text_size"
                android:autoSizeStepGranularity="@dimen/step_text_size"
                android:autoSizeTextType="uniform"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/silver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/web_site_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/steamWebUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_value"
                android:autoLink="web"
                android:autoSizeMaxTextSize="@dimen/max_text_size"
                android:autoSizeMinTextSize="@dimen/min_text_size"
                android:autoSizeStepGranularity="@dimen/step_text_size"
                android:autoSizeTextType="uniform"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/silver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metacritic_score_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/steamMetacriticScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_value"
                android:autoSizeMaxTextSize="@dimen/max_text_size"
                android:autoSizeMinTextSize="@dimen/min_text_size"
                android:autoSizeStepGranularity="@dimen/step_text_size"
                android:autoSizeTextType="uniform"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/silver" />

        </androidx.gridlayout.widget.GridLayout>

        <View
            android:layout_width="@dimen/separation_view_width"
            android:layout_height="@dimen/separation_view_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ten_value"
            android:background="@color/gray" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="2"
            app:useDefaultMargins="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categories_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/steamCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_value"
                android:text="@string/no_elements"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/silver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genres_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/steamGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_value"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/silver" />
        </androidx.gridlayout.widget.GridLayout>

        <View
            android:layout_width="@dimen/separation_view_width"
            android:layout_height="@dimen/separation_view_width"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ten_value"
            android:background="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_value"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/languages_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/steamLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_value"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/silver" />

        <View
            android:layout_width="@dimen/separation_view_width"
            android:layout_height="@dimen/separation_view_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ten_value"
            android:background="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/requirements"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/steamMinimum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_value"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/silver" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/ten_value"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/steamRecommended"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_value"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/silver" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nintendoSpecificationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_value"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nintendoCharacteristics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/ten_value"
                android:layout_weight="1"
                android:textColor="@color/silver" />

            <ImageView
                android:id="@+id/nintendoPegiImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/content_description_pegi"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/separation_view_width"
            android:layout_height="@dimen/separation_view_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ten_value"
            android:background="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_value"
            android:layout_marginBottom="@dimen/fifteen_padding"
            android:gravity="center"
            android:text="@string/features_for_console_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/nintendoCharacteristicsForConsole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_value"
            android:orientation="vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/playstationSpecificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_value"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusedByDefault="false"
                app:columnCount="2"
                app:useDefaultMargins="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/categories_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/playstationCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/silver" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/genres_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/playstationGenres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/silver" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subgenres_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/playstationSubGenres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/silver" />
            </androidx.gridlayout.widget.GridLayout>

            <ImageView
                android:id="@+id/playstationPegiImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars"
                android:contentDescription="@string/content_description_pegi"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/languages_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/voice_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/subtitle_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playstationVoiceLanguages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/silver" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/ten_value"
                android:layout_weight="0"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/playstationSubTitleLanguages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/silver" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ten_value"
            android:background="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/console_supported_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/playstationConsole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/silver" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/microsoftSpecificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_value"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusedByDefault="false"
                android:padding="1dp"
                app:columnCount="2"
                app:useDefaultMargins="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/genres_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/microsoftCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/silver" />
            </androidx.gridlayout.widget.GridLayout>

            <ImageView
                android:id="@+id/microsoftPegiImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/content_description_pegi"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ten_value"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/microsoftMetadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/silver" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ten_value"
            android:background="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/requirements"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/microsoftRequirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/silver" />
    </LinearLayout>

</LinearLayout>