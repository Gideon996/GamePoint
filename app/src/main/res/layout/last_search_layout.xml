<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="lastGames"
            type="it.adriano.tumino.gamepoint.data.BasicGameInformation" />
    </data>

    <LinearLayout
        android:id="@+id/lastGameLayout"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_news">

        <ImageView
            android:id="@+id/lastGameCoverSearchedImageView"
            profileImage="@{lastGames.imageHeaderURL}"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_game_searched"
            android:cropToPadding="false"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/lastGameTitleSearchedTextView"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal|left"
                android:text="@{lastGames.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/lastStoreGameSearchedTextView"
                android:layout_width="200dp"
                android:layout_height="64dp"
                android:autoSizeTextType="uniform"
                android:text="@{lastGames.store}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/Gray" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/cancellImageButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_close_24" />

    </LinearLayout>
</layout>
