<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GamePoint" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/cyan</item>
        <item name="colorSecondaryVariant">#2590c1</item>
        <item name="colorOnSecondary">#000000</item>


        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/ligth_dark_blue</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/ligth_dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/cyan</item>

        <item name="colorButtonNormal">@color/cyan</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/silver</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowBackground">@color/cyan</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

</resources>